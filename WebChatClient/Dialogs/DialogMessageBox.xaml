<local:BaseDialogUserControl x:Class="WebChatClient.DialogMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebChatClient"
             mc:Ignorable="d">

    <Border CornerRadius="0,0,10,10"
            Background="{StaticResource VeryLightBrush}">
        
        <StackPanel d:DataContext="{x:Static local:MessageBoxDialogDesignModel.Instance}" >

            <TextBlock Text="{Binding Message}"
               Padding="5"
               Foreground="{StaticResource VeryDarkBrush}"/>

            <Button Style="{StaticResource OrangeButton}"
            Content="{Binding OkText}"
            Height="35"
            Width="125"
            HorizontalAlignment="Center"
            FontSize="{StaticResource FontSizeRegular}"
            Command="{Binding CloseCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BaseDialogUserControl}}}"/>
        </StackPanel>
    </Border>
    

</local:BaseDialogUserControl>
