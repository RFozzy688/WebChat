<UserControl x:Class="WebChatClient.BubbleContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebChatClient"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300"
             d:DataContext="{x:Static local:ChatAttachmentPopupMenuDesignModel.Instance}">

    <!-- Контейнер для приклепления -->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- пузырьковый прямоугольник -->
        <Border CornerRadius="{Binding CornerAlignment, Converter={local:HorizontalAlignmentConverter}}"
                Padding="15"
                Margin="5 0 0 5"
                Background="{Binding BubbleBackground, Converter={local:StringRGBToBrushConverter}}">

            <Border.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="{StaticResource LightBlue}" />
            </Border.Effect>

            <ContentControl Content="{Binding Converter={local:PopupContentConverter}}"/>
        </Border>

    </Grid>

</UserControl>
